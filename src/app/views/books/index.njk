{% extends "layout.njk" %}

{% block head %}
<title>Livros</title>   
<link rel="stylesheet" href="/visuals/index.css"> 
{% endblock %}

{% block content %}
    <main class="frame">

        <div class="header">
            <a class="button" href="/books/create">Cadastrar Novo Livro</a>
            <form action="/books" method="GET">
                <input type ="text" 
                       name ="filter" 
                       placeholder ="Nome, ISBN, Gênero ou disciplina"
                       value = "{{filter}}"
                >
                <button type="submit">Buscar</button>
            </form>
        </div>

        <div class="cards">
            {% for book in books %}
                <div class="card">
        
                    <section class="avatar"
                            style="background: url({{book.avatar}}) 
                                    no-repeat center center / cover">
                    </section>
        
                    <section class="info">
                        <h3>{{book.title}}</h3>
        
                        <div class="item">
                            <div>Nome:</div>
                            <div>{{book.name}}</div>
                        </div>
                        
                        <div class="item">
                            <div>Disciplina(s):</div> 
                            <div>{{book.disciplina}}</div>
                        </div>
                        
                        <div class="item">
                            <div>Gênero(s):</div> 
                            <div>{{book.genero}}</div>
                        </div>
        
                        <div class="item">
                            <div>Autor(es):</div> 
                            <div>{{book.autor}}</div>
                        </div>
                    </section>
                </div>
            {% endfor %}
        </div>
          
          <div class="pages">
                <div class ="pagination"
                     data-page = {{pagination.page}}
                     data-total = {{pagination.total}}
                     data-filter = {{pagination.filter}}
                ></div>
          </div>
    </main>
{% endblock %}